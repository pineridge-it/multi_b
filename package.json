{
  "name": "truthmarket",
  "version": "0.1.0",
  "description": "Decentralized fact-verification platform on BSV blockchain",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bsv": "^2.0.4",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "axios": "^1.4.0",
    "jsonwebtoken": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "TruthMarket Team",
  "license": "MIT",
  "keywords": [
    "bsv",
    "blockchain",
    "fact-checking",
    "verification",
    "decentralized"
  ]
}